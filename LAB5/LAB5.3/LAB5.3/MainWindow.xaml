<Window x:Class="ShoppingCartApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Shopping Cart" Height="400" Width="600">
    <Grid Background="#FFC2FBFF">
        <!-- Список продуктов -->
        <ListBox x:Name="ProductsListBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="400" Height="150" Margin="10,10,0,0"/>

        <!-- Текстовое поле для отображения деталей корзины -->
        <TextBox x:Name="CartDetailsTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="568" Height="150" Margin="10,170,0,0" VerticalScrollBarVisibility="Auto" IsReadOnly="True" />

        <!-- Кнопки для взаимодействия с корзиной -->
        <Button Content="Add Gaming PC" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Height="30" Margin="10,330,0,0" Click="AddGamingPC_Click"/>
        <Button Content="Add Office PC" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Height="30" Margin="140,330,0,0" Click="AddOfficePC_Click"/>
        <Button Content="Remove Selected Product" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Height="30" Margin="270,330,0,0" Click="RemoveProduct_Click"/>

        <Button Content="Show Cart Details" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Height="30" Margin="10,370,0,0" Click="ShowCartDetails_Click"/>
    </Grid>
</Window>

<Window x:Class="HashGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SHA256 Hash Generator" Height="200" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Введите ФИО (фамилия, имя, отчество):" Margin="0,0,0,5"/>
            <TextBox Name="FullNameTextBox" Margin="0,0,0,10"/>
            <Button Content="Сгенерировать хэш" Click="GenerateHash_Click" Margin="0,0,0,10"/>
            <TextBlock Name="HashResultTextBlock" Text="Хэш" TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</Window>
